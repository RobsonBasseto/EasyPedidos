<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:EasyPedidos.Pages"
             x:Class="EasyPedidos.Pages.DetalhesPedidoPage"
             Title="Detalhes do Pedido">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="15">

            <!-- Cabeçalho -->
            <Label Text="Detalhes do Pedido" 
                   FontSize="24" 
                   FontAttributes="Bold" 
                   HorizontalOptions="Center" />

            <!-- Informações do Pedido -->
            <Frame BackgroundColor="SlateGray" Padding="15">
                <VerticalStackLayout Spacing="10">
                    <Grid ColumnDefinitions="*, *">
                        <Label Text="Número do Pedido:" 
                               FontSize="16" 
                               FontAttributes="Bold"
                               Grid.Column="0"/>
                        <Label Text="{Binding PedidoSelecionado.Id, StringFormat='#{0}'}" 
                               FontSize="16"
                               Grid.Column="1"/>
                    </Grid>

                    <Grid ColumnDefinitions="*, *">
                        <Label Text="Mesa:" 
                               FontSize="16" 
                               FontAttributes="Bold"
                               Grid.Column="0"/>
                        <Label Text="{Binding PedidoSelecionado.Mesa}" 
                               FontSize="16"
                               Grid.Column="1"/>
                    </Grid>

                    <Grid ColumnDefinitions="*, *">
                        <Label Text="Status:" 
                               FontSize="16" 
                               FontAttributes="Bold"
                               Grid.Column="0"/>
                        <Label Text="{Binding PedidoSelecionado.Status}" 
                               FontSize="16"
                               Grid.Column="1"/>
                    </Grid>

                    <Grid ColumnDefinitions="*, *">
                        <Label Text="Data/Hora:" 
                               FontSize="16" 
                               FontAttributes="Bold"
                               Grid.Column="0"/>
                        <Label Text="{Binding PedidoSelecionado.DataHora, StringFormat='{0:dd/MM/yyyy HH:mm}'}" 
                               FontSize="16"
                               Grid.Column="1"/>
                    </Grid>
                </VerticalStackLayout>
            </Frame>

            <!-- Itens do Pedido -->
            <Frame BackgroundColor="SlateGray" Padding="15">
                <VerticalStackLayout Spacing="10">
                    <Label Text="Itens do Pedido:" 
                           FontSize="18" 
                           FontAttributes="Bold" />

                    <CollectionView ItemsSource="{Binding PedidoSelecionado.Itens}">
                        <CollectionView.ItemTemplate>
                            <DataTemplate>
                                <Grid Padding="10" ColumnDefinitions="*, Auto, Auto" ColumnSpacing="10">
                                    <Label Text="{Binding Nome}" 
                                           FontSize="16"
                                           Grid.Column="0"
                                           VerticalOptions="Center"/>

                                    <Label Text="{Binding Quantidade, StringFormat='{0}x'}" 
                                           FontSize="14"
                                           Grid.Column="1"
                                           VerticalOptions="Center"/>

                                    <Label Text="{Binding Preco, StringFormat='R$ {0:F2}'}" 
                                           FontSize="14"
                                           Grid.Column="2"
                                           VerticalOptions="Center"/>
                                </Grid>
                            </DataTemplate>
                        </CollectionView.ItemTemplate>
                    </CollectionView>

                    <BoxView HeightRequest="1" BackgroundColor="#CCCCCC" Margin="0,10"/>

                    <Grid ColumnDefinitions="*, Auto">
                        <Label Text="Total:" 
                               FontSize="18" 
                               FontAttributes="Bold"
                               Grid.Column="0"/>
                        <Label Text="{Binding PedidoSelecionado.Total, StringFormat='R$ {0:F2}'}" 
                               FontSize="18" 
                               FontAttributes="Bold"
                               Grid.Column="1"/>
                    </Grid>
                </VerticalStackLayout>
            </Frame>

            <!-- Ações -->
            <Grid ColumnDefinitions="*, *" ColumnSpacing="10">
                <Button Text="Voltar" 
                        Command="{Binding VoltarCommand}"
                        BackgroundColor="#757575"
                        TextColor="White"
                        Grid.Column="0"/>

                <Button Text="Editar Pedido" 
                        Command="{Binding EditarPedidoCommand}"
                        BackgroundColor="#2196F3"
                        TextColor="White"
                        Grid.Column="1"/>
            </Grid>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>