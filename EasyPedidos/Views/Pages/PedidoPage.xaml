<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:EasyPedidos.Pages"
             xmlns:helpers="clr-namespace:EasyPedidos.Helpers"
             x:Class="EasyPedidos.Pages.PedidoPage"
             Title="{Binding Title}">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="15">

            <!-- Cabeçalho -->
            <Label Text="Novo Pedido" 
                   FontSize="24" 
                   FontAttributes="Bold" 
                   HorizontalOptions="Center" />

            <!-- Seleção de Mesa -->
            <Frame BackgroundColor="SlateGray" Padding="15">
                <VerticalStackLayout Spacing="10">
                    <Label Text="Mesa:" FontSize="16" FontAttributes="Bold"/>
                    <Picker ItemsSource="{Binding Mesas}"
                            SelectedItem="{Binding MesaSelecionada}"
                            Title="Selecione a Mesa" />
                </VerticalStackLayout>
            </Frame>

            <!-- Cardápio -->
            <Frame BackgroundColor="SlateGray" Padding="15">
                <VerticalStackLayout Spacing="10">
                    <Label Text="Cardápio:" FontSize="16" FontAttributes="Bold"/>

                    <Picker ItemsSource="{Binding Cardapio}"
                            SelectedItem="{Binding ItemSelecionado}"
                            ItemDisplayBinding="{Binding Descricao}"
                            Title="Selecione um Item" />

                    <Grid ColumnDefinitions="*, Auto" ColumnSpacing="10">
                        <Entry Text="{Binding Quantidade}" 
                               Placeholder="Quantidade" 
                               Keyboard="Numeric"
                               Grid.Column="0"/>

                        <Button Text="Adicionar" 
                                Command="{Binding AdicionarItemCommand}"
                                BackgroundColor="#2196F3"
                                TextColor="White"
                                Grid.Column="1"/>
                    </Grid>
                </VerticalStackLayout>
            </Frame>

            <!-- Itens do Pedido -->
            <Frame BackgroundColor="SlateGray" Padding="15">
                <VerticalStackLayout Spacing="10">
                    <Label Text="Itens do Pedido:" FontSize="16" FontAttributes="Bold"/>

                    <CollectionView ItemsSource="{Binding ItensPedido}">
                        <CollectionView.ItemTemplate>
                            <DataTemplate>
                                <Frame BackgroundColor="#2F4F4F" Padding="10" Margin="0,5">
                                    <VerticalStackLayout Spacing="8">
                                        <!-- Linha 1: Nome, Quantidade e Botão Remover -->
                                        <Grid ColumnDefinitions="*, Auto, Auto" ColumnSpacing="10">
                                            <Label Text="{Binding Nome}" 
                                                   FontSize="14"
                                                   FontAttributes="Bold"
                                                   TextColor="White"
                                                   Grid.Column="0"/>

                                            <Label Text="{Binding Quantidade, StringFormat='{0}x'}" 
                                                   FontSize="12"
                                                   TextColor="LightGray"
                                                   Grid.Column="1"/>

                                            <Button Text="❌" 
                                                    Command="{Binding Source={RelativeSource AncestorType={x:Type local:PedidoPage}}, Path=BindingContext.RemoverItemCommand}"
                                                    CommandParameter="{Binding .}"
                                                    BackgroundColor="Transparent"
                                                    TextColor="Red"
                                                    FontSize="12"
                                                    Grid.Column="2"/>
                                        </Grid>

                                        <!-- Linha 2: Editor de Observação -->
                                        <Editor Text="{Binding Observacao}"
                                                Placeholder="Observações para este item..."
                                                PlaceholderColor="LightGray"
                                                BackgroundColor="#1E2E2E"
                                                TextColor="White"
                                                FontSize="11"
                                                AutoSize="TextChanges"
                                                MaximumHeightRequest="80"/>
                                    </VerticalStackLayout>

                                </Frame>
                            </DataTemplate>
                        </CollectionView.ItemTemplate>
                    </CollectionView>

                    <Label Text="{Binding TotalPedido, StringFormat='Total: R$ {0:F2}'}" 
                           FontSize="18" 
                           FontAttributes="Bold"
                           TextColor="White"
                           HorizontalOptions="End"/>
                </VerticalStackLayout>
            </Frame>

            <!-- Botões de Ação -->
            <Grid ColumnDefinitions="*, *" ColumnSpacing="10">
                <Button Text="Cancelar" 
                        Command="{Binding CancelarCommand}"
                        BackgroundColor="#f44336"
                        TextColor="White"
                        Grid.Column="0"/>

                <Button Text="Salvar Pedido" 
                        Command="{Binding SalvarPedidoCommand}"
                        BackgroundColor="#4CAF50"
                        TextColor="White"
                        Grid.Column="1"/>
            </Grid>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>